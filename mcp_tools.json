{
  "bing_search": {
    "name": "bing_search",
    "display_name": "必应搜索",
    "description": "搜索互联网获取最新信息",
    "enabled": true,
    "builtin": true,
    "parameters": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "搜索关键词"
        },
        "num_results": {
          "type": "integer",
          "description": "返回结果数量",
          "default": 5
        }
      },
      "required": [
        "query"
      ]
    }
  },
  "fetch_webpage": {
    "name": "fetch_webpage",
    "display_name": "网页抓取",
    "description": "获取搜索结果中某个网页的详细内容。需要先调用bing_search获取结果ID。",
    "enabled": true,
    "builtin": true,
    "parameters": {
      "type": "object",
      "properties": {
        "result_id": {
          "type": "string",
          "description": "从bing_search返回的结果ID"
        }
      },
      "required": [
        "result_id"
      ]
    }
  },
  "get_trending": {
    "name": "get_trending",
    "display_name": "热点新闻",
    "description": "获取各平台热点新闻",
    "enabled": true,
    "builtin": true,
    "parameters": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "description": "来源平台",
          "enum": [
            "weibo",
            "zhihu",
            "toutiao",
            "douyin",
            "bilibili",
            "douban",
            "36kr",
            "juejin",
            "baidu"
          ]
        },
        "limit": {
          "type": "integer",
          "description": "返回数量",
          "default": 10
        }
      }
    }
  },
  "fetch_url": {
    "name": "fetch_url",
    "display_name": "网页抓取",
    "description": "抓取指定URL的网页内容",
    "enabled": true,
    "builtin": true,
    "parameters": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "要抓取的网页URL"
        },
        "max_length": {
          "type": "integer",
          "description": "最大返回字符数",
          "default": 5000
        }
      },
      "required": [
        "url"
      ]
    }
  }
}